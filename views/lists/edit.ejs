<!DOCTYPE html>
<html>
  <%- include('../partials/head.ejs')%>
  <body>
    <header>
      <div class="nav">
        <a href="/sessions/delete">Log Out</a>
        <a href="/users/<%currentUser._id%>">My Lists</a>
      </div>
      <h1><%= list.title %></h1>
    </header>
    <main>
      <h4>Edit List Details:</h4>
      <form action="/lists/<%=list._id%>?_method=PUT" method="POST">
        <label for="title">List Title:</label>
        <input
          type="text"
          name="title"
          placeholder="name this list"
          value="<%=list.title%>"
        />
        <label for="listType">Type of List:</label>
        <select name="listType">
          <option value="" disabled selected>Whats the occasion?</option>
          <option value="Christmas">Christmas</option>
          <option value="Birthday">Birthday</option>
          <option value="Registry">Registry</option>
        </select>
        <button
          class="my-btn"
          type="submit"
        >
          Save
        </button>
      </form>
      <a
        class="teal darken-4 waves-effect waves-light btn"
        href="/lists/<%=list._id%>"
        >Cancel</a
      >
    </main>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        var elems = document.querySelectorAll("select");
        var instances = M.FormSelect.init(elems, {});
      });
    </script>
  </body>
</html>
