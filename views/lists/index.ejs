<!DOCTYPE html>
<html>
  <%- include('../partials/head.ejs')%>
  <body >
    <header>
      <h1>Lists</h1>
      <nav class="brown lighten-5">
        <ul>
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/lists/new">Create a new List</a>
          </li>
        </ul>
      </nav>
    </header>
    <main>
      <h2>Gift of Lists</h2>
      <ul>
        <% for(let i = 0; i < lists.length; i++){ %>
        <li>
          <a href="/lists/<%= lists[i]._id %>"><%= lists[i].name %></a>
        </li>
        <% } %>
      </ul>
    </main>
  </body>
</html>
