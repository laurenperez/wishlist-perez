<!DOCTYPE html>
<html>
  <%- include('../partials/head.ejs')%>
  <body>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        var elems = document.querySelectorAll(".collapsible");
        var instances = M.Collapsible.init(elems, {});
        let elems2 = document.querySelectorAll("select");
        let instances2 = M.FormSelect.init(elems2, {});
      });
    </script>
    <section>
      <ul class="collapsible">
        <li>
          <div class="collapsible-header">
            <i class="material-icons">menu</i>
          </div>
          <div class="collapsible-body">
            <a class="menu-link" href="/sessions/delete">Log Out</a>
            <a class="menu-link" href="/users">Family Page</a>
            <a class="menu-link" href="/users/<%= currentUser._id %>">Back to My Lists</a>
          </div>
        </li>
      </ul>
    </section>
    <main>
      <form action="/lists" method="POST">
        <label for="title">Title this list:</label>
        <input type="text" name="title" placeholder="name this list" />
        <label for="listType">Type of List:</label>
        <select name="listType">
          <option value="" disabled selected>Whats the occasion?</option>
          <option value="Christmas">Christmas</option>
          <option value="Birthday">Birthday</option>
          <option value="Registry">Registry</option>
        </select>
        <button class="my-btn" type="submit" value="Create List">Create List</button>
      </form>
    </main>
  </body>
</html>
