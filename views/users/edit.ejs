<!DOCTYPE html>
<html>
  <%- include('../partials/head.ejs')%>
  <body>
    <header>
      <h1>Edit <%= gift.title %>'s Info</h1>
      <nav>
        <a href="/">Home</a>
        <a href="/users">Family Page</a>
      </nav>
    </header>
    <main>
      <h2>User Info:</h2>
      <form action="/gifts/<%= gift._id %>?_method=PUT" method="post">
        <label for="name">Name</label>
        <input type="text" name="name" placeholder="update name" /><br />

        <label for="address">Delivery Address:</label>
        <input type="text" name="address" placeholder="update address" /><br />

        <input type="submit" value="Save" />
      </form>
      <a href="/users/<%=user._id%>">Cancel</a>
      <form action="/users/<%=user._id%>?_method=DELETE" method="POST">
        <input type="submit" value="Delete My Profile" />
      </form>
    </main>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        var elems = document.querySelectorAll("select");
        var instances = M.FormSelect.init(elems, {});
      });
    </script>
  </body>
</html>
